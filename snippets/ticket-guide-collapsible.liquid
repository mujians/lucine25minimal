<script>
// Enhanced collapsible functionality
document.addEventListener('DOMContentLoaded', function() {
  const ticketGuide = document.querySelector('.ticket-guide-collapsible');
  if (ticketGuide) {
    const summary = ticketGuide.querySelector('summary');
    const arrow = summary.querySelector('.arrow');
    
    ticketGuide.addEventListener('toggle', function() {
      if (this.open) {
        arrow.style.transform = 'rotate(180deg)';
        summary.style.background = 'rgba(255,179,0,0.1)';
      } else {
        arrow.style.transform = 'rotate(0deg)';
        summary.style.background = 'transparent';
      }
    });
    
    // Hover effects
    summary.addEventListener('mouseenter', function() {
      if (!ticketGuide.open) {
        this.style.background = 'rgba(255,179,0,0.08)';
      }
    });
    
    summary.addEventListener('mouseleave', function() {
      if (!ticketGuide.open) {
        this.style.background = 'transparent';
      }
    });
  }
});
</script>

