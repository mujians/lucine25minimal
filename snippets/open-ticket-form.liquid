<div class="sketch-card open-ticket-container" style="padding: 1.5rem; margin: 1.5rem 0;">
  <!-- Completely isolated Open Ticket without Evey classes -->
  
  <form id="open-ticket-product-form" class="open-ticket-form" action="/cart/add" method="post" enctype="multipart/form-data" novalidate="novalidate">
      <!-- Open ticket structure without Evey classes -->
      <div class="open-variants">
        <div class="open-variant-container" style="display: flex; justify-content: space-between; align-items: center; padding: 5px 0; border-bottom: 1px solid rgba(18, 18, 18, 0.08);">
          <input type="hidden" name="id" value="10082871050579">
          
          <div class="open-variant-title">
            <div class="open-variant-name" style="position: relative; font-weight: bold;">Biglietto Open
              <div class="ticket-tooltip" style="display: none;">Pass premium per accedere senza prenotazione. Valido in qualsiasi giorno e orario disponibile.</div>
            </div>
            <div class="open-variant-price"><span class="money" id="open-ticket-price">€25,00</span></div>
          </div>
          
          <div class="open-variant-quantity">
            <div class="open-quantity" style="display: flex; align-items: center; border: 0.1rem solid rgba(18, 18, 18, 0.08); border-radius: 4px;">
              <button type="button" class="open-qty-btn open-qty-minus" data-action="minus" style="width: 45px !important; height: 45px !important; background: transparent !important; border: none !important; cursor: pointer !important; display: flex !important; align-items: center !important; justify-content: center !important;">
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="open-icon open-icon-minus" fill="none" viewBox="0 0 10 2" style="width: 10px !important; height: 10px !important;">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M.5 1C.5.7.7.5 1 .5h8a.5.5 0 110 1H1A.5.5 0 01.5 1z" fill="currentColor"></path>
                </svg>
              </button>
              <input name="quantity" class="open-quantity-input" type="number" min="0" value="1" id="open-quantity" style="width: 2.4rem !important; text-align: center !important; background: transparent !important; border: none !important; border-left: 0.1rem solid rgba(18, 18, 18, 0.08) !important; border-right: 0.1rem solid rgba(18, 18, 18, 0.08) !important; font-size: 14px !important;">
              <button type="button" class="open-qty-btn open-qty-plus" data-action="plus" style="width: 45px !important; height: 45px !important; background: transparent !important; border: none !important; cursor: pointer !important; display: flex !important; align-items: center !important; justify-content: center !important;">
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="open-icon open-icon-plus" fill="none" viewBox="0 0 10 10" style="width: 10px !important; height: 10px !important;">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M1 4.51a.5.5 0 000 1h3.5l.01 3.5a.5.5 0 001-.01V5.5l3.5-.01a.5.5 0 00-.01-1H5.5L5.49.99a.5.5 0 00-1 .01v3.5l-3.5.01H1z" fill="currentColor"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Submit button matching Evey -->
      <button type="submit" id="open-add-to-cart" class="button button--full-width button--secondary" style="margin-top: 1rem;">
        <span id="open-cart-text">Aggiungi al Carrello</span>
      </button>
    </form>
</div>

<script>
// Load Open ticket product data and update price
fetch('/products/biglietto-open-2025.js')
  .then(response => response.json())
  .then(product => {
    if (product && product.price) {
      const priceElement = document.getElementById('open-ticket-price');
      if (priceElement) {
        const price = (product.price / 100).toFixed(2);
        priceElement.textContent = '€' + price.replace('.', ',');
      }
      
      // Update variant ID if different
      const variantId = product.variants && product.variants[0] ? product.variants[0].id : '10082871050579';
      const hiddenInput = document.querySelector('#open-ticket-product-form input[name="id"]');
      if (hiddenInput) {
        hiddenInput.value = variantId;
      }
    }
  })
  .catch(error => {
    // Silently fail if product cannot be loaded
  });

// Open ticket quantity controls
document.addEventListener('DOMContentLoaded', function() {
  console.log('🎟️ Open Ticket JS loaded');
  const buttons = document.querySelectorAll('.open-qty-btn');
  console.log('📦 Found quantity buttons:', buttons.length);
  
  buttons.forEach(btn => {
    btn.addEventListener('click', function(e) {
      console.log('🔢 Quantity button clicked:', this.getAttribute('data-action'));
      const input = document.getElementById('open-quantity');
      const action = this.getAttribute('data-action');
      let value = parseInt(input.value) || 1;
      console.log('📊 Current value:', value, 'Input element:', input);
      
      if (action === 'plus' && value < 10) {
        input.value = value + 1;
        console.log('➕ Incremented to:', input.value);
      } else if (action === 'minus' && value > 1) {
        input.value = value - 1;
        console.log('➖ Decremented to:', input.value);
      } else {
        console.log('❌ No change - limits reached or invalid action');
      }
    });
  });

  // Open ticket form submission
  const form = document.getElementById('open-ticket-product-form');
  if (form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const addBtn = document.getElementById('open-add-to-cart');
      const btnText = document.getElementById('open-cart-text');
      
      if (addBtn) addBtn.disabled = true;
      if (btnText) btnText.textContent = 'Aggiungendo...';
      
      fetch('/cart/add.js', {
        method: 'POST',
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        if (btnText) btnText.textContent = 'Aggiunto! ✓';
        setTimeout(() => {
          window.location.href = '/cart';
        }, 800);
      })
      .catch(error => {
        console.error('Error:', error);
        if (btnText) btnText.textContent = 'Errore - Riprova';
        if (addBtn) addBtn.disabled = false;
        setTimeout(() => {
          if (btnText) btnText.textContent = 'Aggiungi al Carrello';
        }, 2000);
      });
    });
  }
});
</script>

