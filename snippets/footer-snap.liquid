<!-- GLOBAL FOOTER SNAP SNIPPET -->
<!-- Trigger bar removed - replaced by burger menu -->

<footer id="snap-footer" class="snap-footer">
  <!-- Pulsante chiusura mobile -->
  <button class="footer-close-btn" onclick="closeFooter()" aria-label="Chiudi footer">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
      <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
    </svg>
  </button>
  
  <div class="footer-container">
    
    <!-- Menu Navigazione (una sola colonna centrata) -->
    <div class="footer-column footer-nav-main">
      <nav class="footer-menu">
        {% assign main_menu = linklists['menu-principale'] %}
        {% for link in main_menu.links %}
          <a href="{{ link.url }}" class="footer-link-main" target="_self">
            <span class="footer-nav-icon">
              {% if link.title contains 'Biglietti' %}🎫
              {% elsif link.title contains 'FAQ' %}❓
              {% elsif link.title contains 'Eventi' %}🎄
              {% elsif link.title contains 'Menu' or link.title contains 'Ristoro' %}🍽️
              {% elsif link.title contains 'Storia' %}📖
              {% elsif link.title contains 'Visitare' %}👀
              {% elsif link.title contains 'Parcheggi' or link.title contains 'Info' %}🚗
              {% else %}✨
              {% endif %}
            </span>
            {{ link.title | upcase }}
          </a>
        {% endfor %}
      </nav>
    </div>
    
  </div>
  
  <!-- Legal info strutturato -->
  <div class="footer-legal">
    <div class="legal-line">Privacy e Cookie Policy</div>
    <div class="legal-line">Termini di Servizio</div>
    <div class="legal-line"><strong>SPONDA MAGRA SRL</strong></div>
    <div class="legal-line">Via Griffi, 6, 21100 Varese</div>
    <div class="legal-line">P.IVA 12056440964</div>
    <div class="legal-line">info@lucinedinatale.it</div>
  </div>
  
  <!-- Fascia bianca con logo Comune -->
  <div class="footer-comune">
    <img src="https://cdn.shopify.com/s/files/1/0605/2983/6205/files/leggiuno-comune-patrocinio.jpg?v=1699297822" alt="Comune di Leggiuno - Con il patrocinio" />
  </div>
</footer>