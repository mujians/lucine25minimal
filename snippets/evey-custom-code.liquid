      .evey-content-hidden {
        display: none !important;
      }
      .evey-content-ready {
        display: block !important;
        animation: fadeIn 0.5s ease;
      }
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      .evey-loading-placeholder {
        background: linear-gradient(135deg, rgba(255,179,0,0.1) 0%, rgba(211,47,47,0.05) 100%);
        border: 2px solid rgba(255,179,0,0.3);
        border-radius: 12px;
        padding: 40px 20px;
        text-align: center;
        color: #ffb300;
        font-size: 18px;
        font-weight: 700;
        min-height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 20px 0;
      }
    `;
    document.head.appendChild(style);
  }

  // Initialize preloader immediately
  initializePreloader();
  
  // Show loading immediately if we're on a product page
  if (window.location.pathname.includes('/products/')) {
    setTimeout(() => {
      if (!document.querySelector('.evey-loading-overlay')) {
        // Create a temporary loading overlay on the entire product area
        const productForm = document.querySelector('.product-form, .main-product, #MainContent');
        if (productForm) {
          const tempLoader = document.createElement('div');
          tempLoader.className = 'evey-temp-loading';
          tempLoader.innerHTML = '⏳ Caricamento sistema biglietti...';
          tempLoader.style.cssText = `
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.9);
            color: #ffb300;
            padding: 20px 40px;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            z-index: 10000;
            box-shadow: 0 4px 20px rgba(0,0,0,0.5);
          `;
          document.body.appendChild(tempLoader);
          
          // Remove temp loader after a bit
          setTimeout(() => {
            if (document.querySelector('.evey-temp-loading')) {
              tempLoader.remove();
            }
          }, 3000);
        }
      }
    }, 100);
  }

  // Function to show loading placeholder and hide content until ready
  function showEveyLoader() {
    const eveySelectors = [
      '.evey__multi-variant-selector',
      '.evey__variants',
      '[class*="evey__"]',
      '[id*="evey"]'
    ];
    
    for (let selector of eveySelectors) {
      const eveyContainer = document.querySelector(selector);
      if (eveyContainer && !document.querySelector('.evey-loading-placeholder')) {
        // Hide the actual Evey content
        eveyContainer.classList.add('evey-content-hidden');
        
        // Create loading placeholder
        const placeholder = document.createElement('div');
        placeholder.className = 'evey-loading-placeholder';
        placeholder.innerHTML = '⏳ Caricamento biglietti...';
        
        // Insert placeholder before the hidden Evey container
        eveyContainer.parentNode.insertBefore(placeholder, eveyContainer);
        console.log('Evey placeholder added before:', selector);
        break;
      }
    }
  }

  // Function to hide loader and show content when ready
  function hideEveyLoader() {
    let attempts = 0;
    const maxAttempts = 10;
    
    function checkReady() {
      attempts++;
      const eveyContainer = document.querySelector('.evey__multi-variant-selector, .evey__variants, [class*="evey__"], [id*="evey"]');
      const placeholder = document.querySelector('.evey-loading-placeholder');
      
      if (eveyContainer && placeholder) {
        // Check if content is actually ready
        const hasVariants = document.querySelectorAll('.evey__variant-container').length > 0;
        const hasDateButton = document.querySelector('.evey__schedule-selector-button, [class*="schedule"], [class*="seleziona"]');
        const hasTitle = document.querySelector('.biglietti-parco-title');
        const hasTooltips = document.querySelectorAll('.ticket-tooltip').length > 0;
        
        // Also check if date button has Italian text (not English)
        const dateButtonText = hasDateButton ? hasDateButton.textContent.trim() : '';
        const hasItalianText = dateButtonText.includes('Seleziona') || dateButtonText.includes('data') || dateButtonText.length === 0;
        
        if (hasVariants && hasDateButton && hasTitle && hasTooltips && (hasItalianText || attempts >= maxAttempts)) {
          // Remove placeholder
          placeholder.remove();
          // Also remove temp loader if present
          const tempLoader = document.querySelector('.evey-temp-loading');
          if (tempLoader) tempLoader.remove();
          
          // Show Evey content
          eveyContainer.classList.remove('evey-content-hidden');
          eveyContainer.classList.add('evey-content-ready');
        } else if (attempts < maxAttempts) {
          // Not ready yet, try again
          setTimeout(checkReady, 500);
        } else {
          // Force show after max attempts
          placeholder.remove();
          // Also remove temp loader if present
          const tempLoader = document.querySelector('.evey-temp-loading');
          if (tempLoader) tempLoader.remove();
          
          // Show Evey content
          eveyContainer.classList.remove('evey-content-hidden');
          eveyContainer.classList.add('evey-content-ready');
        }
      }
    }
    
    setTimeout(checkReady, 300);
  }

