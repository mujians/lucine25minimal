  // Funzione globale per submit ticket
  window.submitTicket = async function() {
    const name = document.getElementById('ticketName').value;
    const email = document.getElementById('ticketEmail').value;
    const message = document.getElementById('ticketMessage').value;

    if (!name || !email || !message) {
      alert('Compila tutti i campi');
      return;
    }

    try {
      const response = await fetch('https://lucine-chatbot.onrender.com/api/tickets', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          sessionId: sessionId,
          subject: `Richiesta supporto - ${name}`,
          description: message,
          userEmail: email,
          contactMethod: 'EMAIL'
        })
      });

      const data = await response.json();

      if (data.ticketId || data.ticketNumber) {
        addMessage(`✅ Ticket #${data.ticketNumber} creato! Ti ricontatteremo al più presto via email.`, 'bot');
        // Rimuovi il form
        const form = document.querySelector('.ticket-form');
        if (form) form.remove();
      } else {
        throw new Error(data.error || 'Errore creazione ticket');
      }

    } catch (error) {
      console.error('❌ Errore creazione ticket:', error);
      addMessage('❌ Errore nell\'invio del messaggio. Riprova o scrivi a 📧 info@lucinedinatale.it', 'bot');
    }
  };

  // 🔗 Resume chat from ticket token
  async function resumeChatFromTicket(token) {
    try {
      console.log('🔗 Resuming chat from ticket token...');

      const response = await fetch(`https://lucine-chatbot.onrender.com/api/chat/resume/${token}`);
      const data = await response.json();

      if (data.error) {
        console.error('❌ Resume error:', data.message);
        addMessage(`❌ ${data.message}`, 'bot');
        return;
      }

      console.log('✅ Chat resumed:', data);

      // Set sessionId from ticket
      sessionId = data.sessionId;

      // Open popup automatically
      openPopup();

      // Show welcome message
      if (data.welcomeMessage) {
        addMessage(data.welcomeMessage, 'bot');
      }

      // Load previous messages
      if (data.messages && data.messages.length > 0) {
        data.messages.forEach(msg => {
          const sender = msg.sender === 'USER' ? 'user' :
                        msg.sender === 'OPERATOR' ? 'operator' : 'bot';
          addMessage(msg.message, sender);
        });
      }

      // Setup operator mode if operator is connected
      if (data.operatorConnected) {
        isOperatorMode = true;
        updateHeaderForOperatorMode();
        startOperatorPolling();
      }

      // Initialize WebSocket
      initializeWebSocketIfNeeded();

    } catch (error) {
      console.error('❌ Failed to resume chat:', error);
      addMessage('❌ Errore nel riprendere la conversazione. Riprova più tardi.', 'bot');
    }
  }

  // Controlla stato sessione all'apertura del widget
  async function checkSessionStatus() {
    try {
      const response = await fetch(`https://lucine-chatbot.onrender.com/api/chat/poll/${sessionId}`);
      const data = await response.json();
      
      // Se la sessione è già WITH_OPERATOR, avvia il polling
      if (data.sessionStatus === 'WITH_OPERATOR' && !isOperatorMode) {
        console.log('🔄 Sessione già con operatore, avvio polling...');
        isOperatorMode = true;
        updateHeaderForOperatorMode();
        startOperatorPolling();
        
        // Mostra eventuali messaggi operatore già presenti
        if (data.messages && data.messages.length > 0) {
          data.messages.forEach(msg => {
            if (msg.sender === 'OPERATOR') {
              // No operator name prefix - just show the message
              addMessage(msg.message, 'operator');
            }
          });
        }
      }
    } catch (error) {
      console.error('❌ Errore controllo stato sessione:', error);
    }
  }

