  // === FUNZIONI OPERATORE ===
  
  function updateHeaderForOperatorMode() {
    const chatTitle = document.querySelector('.chat-title');
    if (chatTitle) {
      chatTitle.innerHTML = '🟢 CHAT DAL VIVO - OPERATORE';
      chatTitle.style.color = '#10B981'; // Verde per indicare connessione dal vivo
