  </video>
</div>

<div class="navigation-container top" data-tabs-section>
  <div class="mobile-menu">
    <div class="menu-tabs">
      <a href="/" class="tab">Home</a>
      {% assign main_menu = linklists['menu-principale'] %}
      {% for link in main_menu.links %}
