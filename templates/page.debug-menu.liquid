<!-- DEBUG MENU PAGE - Mostra tutte le voci del menu -->
<div class="video-bg">
  <video autoplay muted loop playsinline>
    <source src="https://cdn.shopify.com/videos/c/o/v/088cf9e084664519ad8bf3af537b87fe.mp4" type="video/mp4">
  </video>
</div>

<div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.9); z-index: 10; padding: 20px; overflow-y: auto;">
  <div style="max-width: 800px; margin: 0 auto; background: rgba(255,255,255,0.1); padding: 30px; border-radius: 15px;">
    <h1 style="color: #d4af37; font-family: 'Perandory', sans-serif; font-size: 2.5rem; margin-bottom: 30px;">
      🔍 Debug Menu Structure
    </h1>
    
    <div style="background: rgba(0,0,0,0.5); padding: 20px; border-radius: 10px; margin-bottom: 20px;">
      <h2 style="color: #d4af37; margin-bottom: 20px;">Menu: "menu-principale"</h2>
      
      {% assign main_menu = linklists['menu-principale'] %}
      {% if main_menu %}
        <p style="color: white; margin-bottom: 20px;">
          Totale voci nel menu: <strong style="color: #d4af37;">{{ main_menu.links.size }}</strong>
        </p>
        
        {% for link in main_menu.links %}
          <div style="background: rgba(255,255,255,0.05); padding: 15px; margin: 10px 0; border-radius: 8px; border-left: 3px solid #d4af37;">
            <h3 style="color: #d4af37; margin-bottom: 10px;">
              {{ forloop.index }}. {{ link.title }}
            </h3>
            
            <table style="width: 100%; color: white;">
              <tr>
                <td style="padding: 5px; width: 150px;"><strong>URL:</strong></td>
                <td style="padding: 5px;">{{ link.url }}</td>
              </tr>
              <tr>
                <td style="padding: 5px;"><strong>Type:</strong></td>
                <td style="padding: 5px;">
                  {% if link.url contains '/pages/' %}
                    📄 Page
                  {% elsif link.url contains '/collections/' %}
                    🛍️ Collection
                  {% elsif link.url contains '/products/' %}
                    📦 Product
                  {% elsif link.url == '/' %}
                    🏠 Homepage
                  {% else %}
                    🔗 Other
                  {% endif %}
                </td>
              </tr>
              {% if link.url contains '/pages/' %}
                {% assign page_handle = link.url | split: '/pages/' | last %}
                <tr>
                  <td style="padding: 5px;"><strong>Page Handle:</strong></td>
                  <td style="padding: 5px; font-family: monospace; background: rgba(0,0,0,0.3); padding: 5px; border-radius: 3px;">{{ page_handle }}</td>
                </tr>
                <tr>
                  <td style="padding: 5px;"><strong>Template Needed:</strong></td>
                  <td style="padding: 5px; font-family: monospace; background: rgba(212, 175, 55, 0.2); padding: 5px; border-radius: 3px;">page.{{ page_handle }}.liquid</td>
                </tr>
                {% assign page = pages[page_handle] %}
                <tr>
                  <td style="padding: 5px;"><strong>Page Exists:</strong></td>
                  <td style="padding: 5px;">
                    {% if page %}
                      ✅ Yes
                    {% else %}
                      ❌ No - Create in Shopify Admin
                    {% endif %}
                  </td>
                </tr>
              {% elsif link.url contains '/collections/' %}
                {% assign collection_handle = link.url | split: '/collections/' | last %}
                <tr>
                  <td style="padding: 5px;"><strong>Collection Handle:</strong></td>
                  <td style="padding: 5px; font-family: monospace; background: rgba(0,0,0,0.3); padding: 5px; border-radius: 3px;">{{ collection_handle }}</td>
                </tr>
              {% endif %}
            </table>
          </div>
        {% endfor %}
        
        <div style="background: rgba(212, 175, 55, 0.1); padding: 20px; margin-top: 30px; border-radius: 10px;">
          <h3 style="color: #d4af37; margin-bottom: 15px;">📋 Summary</h3>
          <p style="color: white;">Templates che devi creare:</p>
          <ul style="color: white; margin-top: 10px;">
            {% for link in main_menu.links %}
              {% if link.url contains '/pages/' %}
                {% assign page_handle = link.url | split: '/pages/' | last %}
                <li style="margin: 5px 0;">
                  <code style="background: rgba(0,0,0,0.5); padding: 3px 6px; border-radius: 3px;">page.{{ page_handle }}.liquid</code> 
                  per "{{ link.title }}"
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
        
      {% else %}
        <p style="color: #ff6b6b;">⚠️ Menu "menu-principale" non trovato!</p>
        <p style="color: white;">Assicurati di aver creato il menu in Shopify Admin → Navigation</p>
      {% endif %}
    </div>
    
    <div style="text-align: center; margin-top: 30px;">
      <a href="/" style="display: inline-block; background: linear-gradient(45deg, #d4af37, #f4d03f); color: black; padding: 15px 30px; border-radius: 25px; text-decoration: none; font-weight: 600;">
        Torna alla Homepage
      </a>
    </div>
  </div>
</div>