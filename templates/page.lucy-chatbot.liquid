{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

<style>
  .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .page-header {
    text-align: center;
    margin: 4rem 0 2rem;
  }
  
  .page-title {
    font-size: 2.5rem;
    color: var(--christmas-red);
    font-family: 'Homemade Apple', cursive;
    margin-bottom: 1rem;
  }
  
  .page-description {
    font-size: 1.25rem;
    color: var(--text-white);
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .faq-highlight {
    color: var(--christmas-gold);
    font-weight: 600;
  }
</style>

<div class="page-width">
  <header class="page-header">
    <h1 class="page-title">{{ page.title }}</h1>
    {%- if page.content != blank -%}
      <div class="page-description rte">
        {{ page.content }}
      </div>
    {%- else -%}
      <div class="page-description">
        <p>Risposte alle domande pi√π comuni sui <span class="faq-highlight">biglietti, orari e servizi</span>.</p>
      </div>
    {%- endif -%}
  </header>

  <main class="page-main">
    {%- render 'chatbot-ai' -%}
  </main>
</div>

<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "WebPage",
  "name": {{ page.title | json }},
  "description": {{ page.description | default: page.title | json }},
  "url": {{ request.origin | append: page.url | json }}
}
</script>