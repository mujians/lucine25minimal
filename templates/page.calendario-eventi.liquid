<!-- CALENDARIO EVENTI PAGE -->
<div class="video-bg">
  <video autoplay muted loop playsinline>
    <source src="https://cdn.shopify.com/videos/c/o/v/088cf9e084664519ad8bf3af537b87fe.mp4" type="video/mp4">
  </video>
</div>

<div class="navigation-container top" data-tabs-section>
  <div class="mobile-menu">
    <div class="menu-tabs">
      <a href="/" class="tab">Home</a>
      {% assign main_menu = linklists['menu-principale'] %}
      {% for link in main_menu.links %}
        <a href="{{ link.url }}" class="tab {% if page.handle == 'calendario-eventi' and link.url contains 'calendario-eventi' %}active{% endif %}">
          {{ link.title }}
        </a>
      {% endfor %}
    </div>
  </div>

  <div class="content show" style="display: block; opacity: 1; visibility: visible; position: fixed; top: 80px; left: 0; right: 0; bottom: 0; background: transparent; backdrop-filter: blur(30px); -webkit-backdrop-filter: blur(30px); padding: 20px; overflow-y: auto; z-index: 5;">
    <div class="content-section">
      <div class="formatted-content">
        {% if page.content != blank %}
          {{ page.content }}
        {% else %}
          <h1>Calendario Eventi</h1>
          <p class="christmas-accent">Tutti gli appuntamenti delle <span class="highlight-text">Lucine di Natale 2024</span></p>
          
          <div class="event-card">
            <h3 class="christmas-accent">Eventi Fissi Giornalieri</h3>
            <div class="info-grid">
              <div class="info-box">
                <h4>🎅 17:00</h4>
                <p><strong>Babbo Natale</strong><br>Incontro e foto<br>Casa di Babbo Natale</p>
              </div>
              <div class="info-box">
                <h4>✨ 18:00</h4>
                <p><strong>Accensione Luci</strong><br>Spettacolo inaugurale<br>Piazza principale</p>
              </div>
              <div class="info-box">
                <h4>🎭 19:00</h4>
                <p><strong>Animazione</strong><br>Elfi e personaggi<br>Lungo il percorso</p>
              </div>
              <div class="info-box">
                <h4>🎵 20:00</h4>
                <p><strong>Musica Live</strong><br>Cori natalizi<br>Palco centrale</p>
              </div>
            </div>
          </div>

          <div class="event-card">
            <h3 class="christmas-accent">Eventi Speciali Novembre</h3>
            
            <div style="background: rgba(212, 175, 55, 0.1); padding: 15px; border-radius: 10px; margin: 10px 0;">
              <h4>🎉 25 Novembre - INAUGURAZIONE</h4>
              <p>Ore 16:00 - Grande apertura con il Sindaco</p>
              <p>Ore 17:00 - Spettacolo pirotecnico</p>
              <p>Ore 18:00 - Prima accensione ufficiale</p>
            </div>
            
            <div style="background: rgba(255, 255, 255, 0.05); padding: 15px; border-radius: 10px; margin: 10px 0;">
              <h4>🎄 26-27 Novembre - Weekend Opening</h4>
              <p>Laboratori creativi per bambini</p>
              <p>Mercatini dell'artigianato</p>
              <p>Degustazione prodotti tipici</p>
            </div>
          </div>

          <div class="event-card">
            <h3 class="christmas-accent">Eventi Speciali Dicembre</h3>
            
            <div style="background: rgba(212, 175, 55, 0.1); padding: 15px; border-radius: 10px; margin: 10px 0;">
              <h4>🎁 3-4 Dicembre</h4>
              <p><strong>Festival del Cioccolato</strong><br>Stand e degustazioni di cioccolata calda artigianale</p>
            </div>
            
            <div style="background: rgba(255, 255, 255, 0.05); padding: 15px; border-radius: 10px; margin: 10px 0;">
              <h4>🌟 8 Dicembre - Immacolata</h4>
              <p><strong>Giornata Speciale Famiglie</strong><br>15:00 - Spettacolo di magia<br>17:00 - Parata Disney<br>19:00 - Concerto Gospel</p>
            </div>
            
            <div style="background: rgba(212, 175, 55, 0.1); padding: 15px; border-radius: 10px; margin: 10px 0;">
              <h4>🎪 10-11 Dicembre</h4>
              <p><strong>Weekend del Circo</strong><br>Artisti di strada, giocolieri e trampolieri</p>
            </div>
            
            <div style="background: rgba(255, 255, 255, 0.05); padding: 15px; border-radius: 10px; margin: 10px 0;">
              <h4>🎼 17-18 Dicembre</h4>
              <p><strong>Festival Musicale</strong><br>Band locali e cori natalizi<br>Concerto della Banda Cittadina</p>
            </div>
            
            <div style="background: rgba(212, 175, 55, 0.1); padding: 15px; border-radius: 10px; margin: 10px 0;">
              <h4>🎅 24 Dicembre - Vigilia</h4>
              <p><strong>Christmas Eve Special</strong><br>15:00 - Ultimo saluto di Babbo Natale<br>17:00 - Distribuzione regali ai bambini<br>18:00 - Brindisi di Natale per tutti</p>
            </div>
            
            <div style="background: rgba(255, 255, 255, 0.05); padding: 15px; border-radius: 10px; margin: 10px 0;">
              <h4>🎊 31 Dicembre - Capodanno</h4>
              <p><strong>New Year's Eve</strong><br>21:00 - DJ Set<br>23:00 - Countdown<br>00:00 - Fuochi d'artificio sul lago</p>
            </div>
          </div>

          <div class="event-card">
            <h3 class="christmas-accent">Eventi Speciali Gennaio</h3>
            
            <div style="background: rgba(212, 175, 55, 0.1); padding: 15px; border-radius: 10px; margin: 10px 0;">
              <h4>👑 6 Gennaio - Epifania</h4>
              <p><strong>Festa della Befana</strong><br>15:00 - Arrivo della Befana<br>16:00 - Distribuzione calze<br>18:00 - Spettacolo finale</p>
            </div>
            
            <div style="background: rgba(255, 255, 255, 0.05); padding: 15px; border-radius: 10px; margin: 10px 0;">
              <h4>🌟 7 Gennaio - Gran Finale</h4>
              <p><strong>Ultima Notte di Luci</strong><br>19:00 - Parata di chiusura<br>20:00 - Ultimo spettacolo<br>21:00 - Saluti e arrivederci al 2025</p>
            </div>
          </div>

          <div class="event-card">
            <h3 class="christmas-accent">Laboratori Weekend</h3>
            <p>Tutti i sabati e domeniche dalle 15:00 alle 18:00</p>
            <ul>
              <li>🎨 <strong>Sabato:</strong> Decorazioni natalizie fai-da-te</li>
              <li>🍪 <strong>Domenica:</strong> Biscotti di pan di zenzero</li>
              <li>📝 <strong>Prenotazione obbligatoria:</strong> max 20 bambini per turno</li>
              <li>💰 <strong>Costo:</strong> €5 a bambino (materiali inclusi)</li>
            </ul>
          </div>

          <div class="event-card" style="text-align: center; background: linear-gradient(45deg, rgba(212, 175, 55, 0.1), rgba(244, 208, 63, 0.1));">
            <h3 class="christmas-accent">Non Perdere Nessun Evento!</h3>
            <p>Acquista il tuo biglietto e vivi la magia</p>
            <a href="/products/biglietto-lucine-leggiuno-2024" class="family-cta">Acquista Biglietti</a>
            <p style="margin-top: 1rem;">
              Seguici su Instagram <span class="highlight-text">@lucinedinatale</span> per aggiornamenti live
            </p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>