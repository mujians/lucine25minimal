<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ product.title }} - {{ shop.name }}</title>
  {{ content_for_header }}
  
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 2rem;
      background: white;
      color: black;
    }
    .product-container {
      max-width: 800px;
      margin: 0 auto;
    }
    h1 {
      margin-bottom: 1rem;
    }
    .price {
      font-size: 1.5rem;
      margin: 1rem 0;
    }
    .evey-container {
      margin: 2rem 0;
      border: 2px solid #ccc;
      padding: 1rem;
    }
  </style>
</head>

<body>
  <div class="product-container">
    <h1>{{ product.title }}</h1>
    
    <div class="price">
      {{ product.price | money }}
    </div>
    
    <div class="evey-container">
      <h3>Evey Scheduler Test</h3>
      <div id="evey-selector">
        <!-- Evey app block -->
        {% render 'evey-events-tickets-multi-variant-selector', 
           product: product,
           show_service_fees: true %}
      </div>
    </div>
    
    <script>
      console.log('üß™ CLEAN PRODUCT TEMPLATE LOADED');
      console.log('üì± User Agent:', navigator.userAgent);
      console.log('üì¶ Product:', {{ product | json }});
      
      // Monitor for Evey loading
      const observer = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
          if (mutation.addedNodes) {
            console.log('üìù DOM change detected:', mutation);
          }
        });
      });
      
      observer.observe(document.body, {
        childList: true,
        subtree: true
      });
      
      // Check every 2 seconds for Evey elements
      setInterval(() => {
        const eveyElements = document.querySelectorAll('[class*="evey"], [id*="evey"], [data-evey]');
        console.log('üîç Evey elements found:', eveyElements.length, eveyElements);
      }, 2000);
    </script>
  </div>
</body>
</html>