<div style="border: 1px dashed #999; padding: 10px; margin: 10px 0;">
  <p><strong>Evey Clean Test Section</strong></p>
  
  {% for block in section.blocks %}
    <div style="border: 1px solid #ccc; margin: 10px 0; padding: 15px;">
      {{ block.shopify_attributes }}
      <p>Evey Block Type: {{ block.type }}</p>
      <!-- L'app block Evey verrÃ  renderizzato qui -->
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Evey Clean Test",
  "class": "evey-clean-test-section",
  "settings": [
    {
      "type": "text",
      "id": "test_title",
      "label": "Test Title",
      "default": "Evey Test"
    }
  ],
  "blocks": [
    {
      "name": "Evey Events Block",
      "type": "shopify://apps/evey-events-tickets/blocks/multi-variant-selector/0ff19eb4-83c2-40c2-b780-a501fc99b6d8",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_service_fees",
          "label": "Show service fees",
          "default": true
        }
      ]
    }
  ]
}
{% endschema %}